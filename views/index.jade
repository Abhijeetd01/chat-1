doctype 5
html(lang="en")
  head
    meta(charset="utf-8")
    title GitChat
    meta(name="description", content="Chat build on top of GitHub API")
    meta(name="keywords", content="chat, github, api, socket.io")
    meta(name="author", content="HashObject (team@hashobject.com)")
    link(rel="stylesheet", href="/index.css")
    script
      var gChat = {};
      gChat.user = {
        id: '#{user.id}',
        username: '#{user.username}',
        avatar: '#{user.avatar}',
        profileUrl: '#{user.profileUrl}',
        displayName: '#{user.displayName}',
        accessToken: '#{user.accessToken}'
      };
    script(src="/socket.io/socket.io.js")
  body
    include intro
    include chat
    div#popup-cover
  script(src="/js/underscore-min.js")
  script(src="/js/moment.min.js")
  script(src="/js/jquery-1.8.2.min.js")
  script(src="/js/page.js")
  script(src="/js/spin.js")
  script(src="/js/showdown.js")
  script(src="/js/app.js")