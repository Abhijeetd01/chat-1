@import 'nib'
global-reset();
*
  box-sizing: border-box;
  outline: 0;
html
  font-family: Calibri, Helvetica, Arial, sans-serif;
  color: #333333;
  height: 100%;
  overflow-x: hidden;
  &.unlogined
    & .unlogined-show
      display: block;
    & .logined-show
      display: none;
  &.logined
    & .logined-show
      display: block;
    & .unlogined-show
      display: none;
body
  color: #333333;
  font-size: 16px;
  height: 100%;

#intro-page
  background: #eeeeee;
  height: 100%;

#chat
  position: absolute;
  width: 100%;
  bottom: 97px;
  padding-right: 250px;

.chat-body
  overflow-y: auto;

#chat-menu
  width: 250px;
  height: 100%;
  background-color: #08BCD9 ;
  position: fixed;
  right: 0;
  top: 0;
  color: white;

.top-menu
  & .user img
    float: left;
  & .user span
    padding-top: 5px;
  & .user a
    text-transform: uppercase;
    color: white;
    text-decoration: none;
    margin-top: 6px;
    &:hover
      color: #0F202E;
  & .avatar
    border: 2px solid white;

.login-btn
  border: none;
  width: 249px;
  height: 40px;
  background-color: #04A3C9;
  color: white;
  text-transform: uppercase;
  font-weight: bold;
  font-size: 17px;
  &:hover
    background-color: #0F202E;

.avatar
    width: 35px;
    height: 35px;
    margin: 5px;
    vertical-align: middle;

.chat-mates
  vertical-align: middle;
  & .avatar
    border: 2px solid white;
  & span
    vertical-align: middle;
  & li:hover
    background-color: #04a3c9;
  & .users-icon
    margin-top: 20px;
    & img
      width: 25px;
      height: 27px;
      margin: 5px 10px 5px 10px;
      vertical-align: middle;
    & span
      vertical-align: middle;
      text-transform: uppercase;
      font-weight: bold;

#input-area
  position: fixed;
  bottom: 0;
  background-color: #0F202E;
  height: 95px;
  width: 100%;
  padding: 20px 270px 20px 5px;
  &:hover #msg-send
    background: #04a3c9 url('images/send-btn.png');
    cursor: pointer;
    background-position: center;
    background-repeat: no-repeat;

.input-wrapper
  width: 100%;
  & .textarea
    display: inline-block;
    padding-right: 72px;
    width: 100%;
    & textarea
      left: 0;
      right: 0;
      width: 100%;
      padding: 10px;
      border: none;

#msg-send
  float: right;
  vertical-align: top;
  top: 10px;
  margin-top: -66px;
  border: none;
  height: 52px;
  width: 52px;
  color: transparent;
  background: #08bcd9 url('images/send-btn.png');
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  z-index: 1

.msg
  height: 45px;
  background-color: #ffffff;
  & .sender
    height: 45px;
    width: 45px;
    background-color: #f3f3f3;
    display: inline-block;
    position: relative;
    vertical-align: middle;
    float: left;
    &:after
      content: "";
      display: inline-block;
      width: 0; 
      height: 0; 
      border-top: 10px solid transparent;
      border-bottom: 10px solid transparent;
      border-left: 10px solid #f3f3f3;
      position: absolute;
      right: -10px;
      top: 12px;
    & .avatar
      float: left;
      opacity: 0.9;
  & .msg-body
    margin-left: 65px;
    padding-top: 7px;
    & a
      text-decoration: none;
      &:hover
        color: #0F202E;

.msg:nth-child(odd)
  background-color: #eeeeee;
  & .sender
    background-color: #dddddd;
    &:after
      border-left: 10px solid #dddddd;

.date, .by-label, .author
  display: inline-block;
  font-size: 12px;
  color: #888;
  margin: 5px 4px 0px 0px;

.visible
  display: block;

.inline-visible
  display: inline-block;

.invisible
  display: none;